# Backend Environment Configuration - Production

NODE_ENV=production
PORT=4000
LOG_LEVEL=warn

# PostgREST API (Production)
POSTGREST_URL=https://postgrest.homevisit.production

# CORS Configuration (Production)
CORS_ORIGIN_1=https://homevisit.production
CORS_ORIGIN_2=https://postgrest.homevisit.production

# Server Configuration
SERVER_TIMEOUT=5000
REQUEST_JSON_LIMIT=1mb

# PostgREST Endpoints & Parameters
POSTGREST_RPC_AUTH_ENDPOINT=/rpc/get_or_create_user
POSTGREST_RPC_SITES_ENDPOINT=/rpc/get_user_sites
POSTGREST_AUTH_PARAM=p_username
POSTGREST_QUERY_PARAM=p_user_id

# Site Enrichment
SITE_STATUS_OPTIONS=Full,Partial,No
STATUS_CALCULATION_DELAY_MS=1000
SITE_LINK_DOMAIN=homevisit.production
