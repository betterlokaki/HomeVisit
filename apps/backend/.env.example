# Backend Environment Configuration - Development

# Server
NODE_ENV=development
PORT=4000
LOG_LEVEL=info

# PostgREST API
POSTGREST_URL=http://localhost:3000

# CORS Configuration
CORS_ORIGIN_1=http://localhost:5173
CORS_ORIGIN_2=http://localhost:3000

# Server Configuration
SERVER_TIMEOUT=5000
REQUEST_JSON_LIMIT=1mb

# PostgREST Endpoints & Parameters
POSTGREST_RPC_AUTH_ENDPOINT=/rpc/get_or_create_user
POSTGREST_RPC_SITES_ENDPOINT=/rpc/get_user_sites
POSTGREST_AUTH_PARAM=p_username
POSTGREST_QUERY_PARAM=p_user_id

# Site Enrichment
SITE_STATUS_OPTIONS=Full,Partial,No
STATUS_CALCULATION_DELAY_MS=1000
SITE_LINK_DOMAIN=homevisit.local
ELASTIC_PROVIDER_BASE_URL=http://localhost:5001
ELASTIC_PROVIDER_ENDPOINT=/health
PROJECT_LINK_FORMAT=https://homevisit.local/project?overlays={overlayIds}

# Overlay Service Configuration
OVERLAY_SERVICE_QUERY_PARAMS=
OVERLAY_SERVICE_HEADERS=
